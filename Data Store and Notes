Datastore DDL and DML:
-----------------------
create database electroluxdb;
use electroluxdb;
CREATE TABLE appliancedetails (
  appliance_id varchar(50) DEFAULT NULL,
  customer_id int DEFAULT NULL,
  factory_number varchar(45) DEFAULT NULL,
  status varchar(30) DEFAULT NULL,
  id bigint NOT NULL,
  PRIMARY KEY (id)
);

CREATE TABLE customer (
  customer_id int NOT NULL,
  customer_name varchar(60) DEFAULT NULL,
  customer_address varchar(150) DEFAULT NULL,
  id bigint NOT NULL,
  PRIMARY KEY (customer_id)
);

